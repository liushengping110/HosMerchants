<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/item_lock"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="20px"
        android:background="@drawable/item_lock"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_merchants_logo"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center|top"
            android:src="@mipmap/ic_launcher"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_merchants_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺名"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="10px"
                android:textSize="@dimen/text_title"
                />
            <TextView
                android:id="@+id/text_merchants_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:gravity="center|left"
                android:paddingBottom="10px"
                android:textSize="@dimen/text_content"
                />
            <TextView
                android:id="@+id/text_merchants_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:paddingBottom="10px"
                android:gravity="center"
                android:textSize="@dimen/text_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_merchants_qs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_samll"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/huise"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    />
                <TextView
                    android:id="@+id/text_merchants_psf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_samll"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10px"
                android:layout_height="60px">
                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center"
                    android:src="@drawable/merchants_sub"
                    />
                <TextView
                    android:id="@+id/text_merchants_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_samll"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/danhui"
        />
</LinearLayout>