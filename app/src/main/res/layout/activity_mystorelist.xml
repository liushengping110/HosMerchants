<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/main_text_sel"
        android:fitsSystemWindows="true"/>
    <include
        layout="@layout/title_back" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:id="@+id/list_store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            />
        <TextView
            android:id="@+id/text_err_msg"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_content"
            android:layout_height="wrap_content"
            android:textColor="@color/huise"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/text_err_agagin"
            android:layout_width="250px"
            android:textSize="@dimen/text_content"
            android:background="@drawable/login_sel"
            android:layout_height="100px"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="50px"
            android:layout_centerInParent="true"
            android:layout_below="@id/text_err_msg"
            />
    </RelativeLayout>


</LinearLayout>