<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/main_text_sel"
        android:fitsSystemWindows="true"/>

    <include
        layout="@layout/title_back"
        />
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:textSize="@dimen/text_content"
        android:background="@drawable/regist_edit_bg"
        android:hint="请输入注册的邮箱账号"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_marginRight="30px"
        />
    <LinearLayout
        android:id="@+id/lin_email"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/edit_yzm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/text_content"
        android:background="@drawable/regist_edit_bg"
        android:hint="请输入验证码"
        android:layout_marginRight="30px"
        />
        <TextView
            android:id="@+id/text_check"
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="获取验证码"
            android:background="@drawable/login_sel"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_edit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:visibility="gone"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:textSize="@dimen/text_content"
            android:background="@drawable/regist_edit_bg"
            android:hint="请输入密码"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            />
        <EditText
            android:id="@+id/edit_pass_again"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:textSize="@dimen/text_content"
            android:background="@drawable/regist_edit_bg"
            android:hint="请再次输入密码"
            android:layout_marginTop="30px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="60dp"
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:textSize="45px"
        android:textColor="#FFFFFF"
        android:text="提交"
        android:background="@drawable/login_sel"
        />
</LinearLayout>