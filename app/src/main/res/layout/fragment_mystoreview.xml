<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/inc_recyview"
        layout="@layout/mystoreview_content"
        />
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nest_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_net_err"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_err_msg"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_content"
                android:layout_marginTop="50px"
                android:layout_height="wrap_content"
                android:textColor="@color/huise"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_err_agagin"
                android:layout_width="250px"
                android:textSize="@dimen/text_content"
                android:background="@drawable/login_sel"
                android:layout_height="100px"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="50px"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_below="@id/text_err_msg"
                android:text="点此重试"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>