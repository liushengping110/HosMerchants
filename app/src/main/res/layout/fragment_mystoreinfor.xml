<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="140px"
                android:gravity="center|left"
                android:paddingLeft="50px"
                android:text="商家信息"
                android:textSize="@dimen/text_center"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/frag_s_logo"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/frag_s_intrduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="50px"
                    android:layout_weight="1"
                    android:minHeight="300px"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/danhui"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="50px"
                    android:text="商铺名称"
                    android:textSize="@dimen/text_center"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/frag_s_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="50px"
                    android:text="餐饮美食"
                    android:paddingRight="30px"
                    android:textSize="@dimen/text_cs"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/danhui"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="50px"
                    android:text="商家类型"
                    android:textSize="@dimen/text_center"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/frag_s_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="50px"
                    android:text="餐饮美食"
                    android:paddingRight="30px"
                    android:textSize="@dimen/text_cs"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/danhui"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="50px"
                    android:text="商家地址"
                    android:textSize="@dimen/text_center"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/frag_s_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="50px"
                    android:text="北京市朝阳区红军营南路"
                    android:paddingRight="30px"
                    android:textSize="@dimen/text_cs"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/danhui"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="130px"
                    android:gravity="center|left"
                    android:paddingLeft="50px"
                    android:text="商家电话"
                    android:textSize="@dimen/text_center"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/frag_s_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="50px"
                    android:text="18201367546"
                    android:paddingRight="30px"
                    android:textSize="@dimen/text_cs"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/danhui"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="130px"
                android:gravity="center|left"
                android:paddingLeft="50px"
                android:text="营业资质"
                android:textSize="@dimen/text_center"
                android:textStyle="bold"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="350px"
                        android:layout_height="400px"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:src="@drawable/my_store_infor_license"
                        android:layout_marginRight="100px"
                        />
                    <ImageView
                        android:layout_width="350px"
                        android:layout_height="400px"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:src="@drawable/my_store_infor_license"
                        android:layout_marginLeft="100px"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="100px"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>