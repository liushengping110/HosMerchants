<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/main_text_sel"
        android:fitsSystemWindows="true"/>
    <include
        layout="@layout/title_back" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="@color/danhui"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_notice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="请选择您的店铺类型:"
            android:textStyle="bold"
            android:paddingLeft="30px"
            android:textSize="@dimen/text_content"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/text_duoxuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="可多选"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginRight="30px"
            android:textSize="@dimen/text_cs"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:id="@+id/list_storecate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            />
        <TextView
            android:id="@+id/text_err_msg"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_content"
            android:layout_height="wrap_content"
            android:textColor="@color/huise"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/text_err_agagin"
            android:layout_width="250px"
            android:textSize="@dimen/text_content"
            android:background="@drawable/login_sel"
            android:layout_height="100px"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="50px"
            android:layout_centerInParent="true"
            android:layout_below="@id/text_err_msg"
            />
    </RelativeLayout>
</LinearLayout>