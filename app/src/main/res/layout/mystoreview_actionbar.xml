<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/transparent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_left_back"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:src="@drawable/back_sel"
            android:padding="20px"
            />
        <TextView
            android:id="@+id/text_s_search"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_gravity="center"
            android:background="@drawable/merchants_search_bg"
            android:gravity="center"
            android:textSize="@dimen/text_center"
            android:text="搜索商品" />
        <ImageView
            android:id="@+id/img_right_more"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:src="@drawable/right_more"
            android:layout_gravity="center"
            android:padding="20px"
            />
    </LinearLayout>
</LinearLayout>