<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rel_dialog_img"
        android:layout_width="match_parent"
        android:layout_height="600px">
        <ImageView
            android:id="@+id/img_detail_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/text_img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="点击更换图片"
            android:textSize="26sp"
            android:textColor="@color/colorAccent"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/text_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center|left"
        android:text="ssss"
        android:textSize="20sp"
        android:background="@drawable/regist_edit_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/text_detail_content"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:textColor="@color/black"
        android:gravity="center|left|top"
        android:textSize="@dimen/text_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/regist_edit_bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="5px"
        android:layout_marginLeft="20dp"
        android:layout_height="150px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥"
            android:gravity="center|left"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            />
        <EditText
            android:id="@+id/text_detail_price"
            android:layout_width="280px"
            android:layout_height="match_parent"
            android:text="43"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:background="@drawable/regist_edit_bg"
            android:gravity="center|left"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_changedel_sure"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@drawable/login_sel"
        android:text="确定"
        android:layout_marginTop="50px"
        android:textColor="@color/white"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:textSize="@dimen/text_content"
        android:gravity="center"
        />
</LinearLayout>