<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/main_text_sel"
        android:fitsSystemWindows="true"/>
    <include
        layout="@layout/title_back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="250px"
                android:layout_height="100px"
                android:background="@color/bule"
                android:textColor="@color/white"
                android:text="个人资料"
                android:textSize="@dimen/text_content"
                android:gravity="center"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="5px"
                android:background="@color/bule"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名："
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_center"
                    />
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:hint="请输入您的真实姓名"
                    android:textSize="@dimen/text_content"
                    android:singleLine="true"
                    android:background="@drawable/regist_edit_bg"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="手机号码："
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_center"
                    />
                <EditText
                    android:id="@+id/edit_tel"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:hint="请输入您的手机号码"
                    android:textSize="@dimen/text_content"
                    android:singleLine="true"
                    android:background="@drawable/regist_edit_bg"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="邮箱账号："
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_center"
                    />
                <EditText
                    android:id="@+id/edit_email"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:hint="请输入您的邮箱账号"
                    android:singleLine="true"
                    android:textSize="@dimen/text_content"
                    android:background="@drawable/regist_edit_bg"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="250px"
                android:layout_height="100px"
                android:background="@color/bule"
                android:textColor="@color/white"
                android:text="身份信息"
                android:textSize="@dimen/text_content"
                android:gravity="center"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="5px"
                android:background="@color/bule"/>
            <LinearLayout
                android:id="@+id/lin_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:background="@color/white"
                android:layout_marginRight="30px"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="280px">
                    <ImageView
                        android:id="@+id/img_id_font"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:padding="10px"
                        android:background="@drawable/my_infor_id_lock"
                        />
                    <TextView
                        android:id="@+id/text_look_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:textColor="@color/text_zw"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="280px">
                    <ImageView
                        android:id="@+id/img_id_after"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:padding="10px"
                        android:background="@drawable/my_infor_id_lock"
                        />
                    <TextView
                        android:id="@+id/text_look_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:textColor="@color/text_zw"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_id_text"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="身份证正面"
                    android:gravity="center"
                    android:textSize="@dimen/text_samll"
                    />
                <View
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="身份证反面"
                    android:gravity="center"
                    android:textSize="@dimen/text_samll"
                    />
            </LinearLayout>

            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/btn_up_infor"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:textSize="45px"
                android:textColor="#FFFFFF"
                android:text="保存"
                android:background="@drawable/login_sel"
                android:layout_weight="1"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
