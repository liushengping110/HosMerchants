<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:paddingRight="20px"
            android:paddingLeft="20px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_custmo_header"
                android:layout_width="120px"
                android:layout_height="match_parent"
                android:src="@drawable/img_header"
                android:padding="20px"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_custmo_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="张三"
                android:textSize="@dimen/text_content"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_custmo_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="待付款"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_center"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/danhui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:orientation="horizontal">
            <wizrole.hosmerchants.view.CustListView
                android:id="@+id/list_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/text_goods_allnum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="共计一件商品"
                android:paddingRight="30px"
                android:textSize="@dimen/text_samll"/>
            <TextView
                android:id="@+id/text_goods_allprices"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="合计：288.00元"
                android:paddingRight="30px"
                android:textSize="@dimen/text_samll"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/danhui"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:paddingRight="30px"
            android:paddingLeft="30px"
            android:orientation="horizontal">
            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/text_action_one"
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/order_item_text"
            />
            <TextView
                android:id="@+id/text_action_two"
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:background="@drawable/order_item_text"
                />
            <TextView
                android:id="@+id/text_action_three"
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:background="@drawable/order_item_text"
                />
            <TextView
                android:id="@+id/text_action_four"
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:background="@drawable/order_item_text"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@color/bg"
        />

</LinearLayout>