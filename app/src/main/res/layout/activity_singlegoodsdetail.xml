<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_main"
    >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerview"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:clickable="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_behavior="@string/detail_header_behavior">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/bule"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_detail"
                        android:layout_width="match_parent"
                        android:layout_height="900px"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="8dp">
                                <TextView
                                    android:id="@+id/detail_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="商品名"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/detail_sale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="2dp"
                                    android:text="月售123份 好评率95%"
                                    android:textColor="@color/text_fz"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/detail_price"
                                android:layout_width="200px"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:gravity="center"
                                style="@style/tv_price"
                                android:textSize="@dimen/text_title"
                                android:textColor="@color/colorAccent"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30px"
                            android:background="@color/danhui"
                            />
                    </LinearLayout>
                </LinearLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="180px"
                    android:paddingTop="26dp"
                    app:layout_collapseMode="pin">
                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="55px"
                        android:textStyle="bold"/>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>
           <!--此处固定在顶部-->
        </android.support.design.widget.AppBarLayout>

        <ImageView
            android:id="@+id/ic_close"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_gravity="center|left|top"
            android:layout_marginTop="40px"
            android:padding="60px"
            android:layout_marginRight="30px"
            android:scaleType="fitXY"
            android:onClick="close"
            android:alpha="0"
            android:layout_centerInParent="true"
            android:elevation="4dp"
            android:src="@drawable/back_sel"/>
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:alpha="0"
        android:text="下滑关闭"
        android:textColor="@color/white"
        android:textSize="12sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/scroll_behavior">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/detail_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="invisible"
            android:overScrollMode="never"
            app:layout_behavior="@string/scroll_behavior"/>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nes_err_msg"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            app:layout_behavior="@string/scroll_behavior"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_net_err"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/text_err_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50px"
                    android:textColor="@color/text_fz"
                    android:textSize="@dimen/text_title"
                    />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nes_load_view"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:background="@color/white"
            app:layout_behavior="@string/scroll_behavior"
            android:layout_centerInParent="true"
            android:layout_height="match_parent">
            <wizrole.hosmerchants.view.LoadingView
                android:id="@+id/load_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                app:loadingText="加载中..." />
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
    <View
        android:id="@+id/car_fl"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
</android.support.design.widget.CoordinatorLayout>