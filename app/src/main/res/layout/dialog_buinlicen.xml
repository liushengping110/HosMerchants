<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="920px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:background="@drawable/dialog_exits_top_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="营业执照信息："
                android:textColor="@color/black"
                android:textSize="@dimen/text_content"
                android:layout_marginLeft="30px"
                android:gravity="center"
                />
        </LinearLayout>
        <!--内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60px"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="单位名称"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/dialog_bl_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="北京维思陆科技有限公司"
                    android:gravity="center"
                    android:layout_marginLeft="40px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_marginLeft="40px"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="法人"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/dialog_bl_fr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="xxx"
                    android:gravity="center"
                    android:layout_marginLeft="40px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="地址"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/dialog_bl_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="北京市朝阳区"
                    android:gravity="center"
                    android:layout_marginLeft="40px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="有效期"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/dialog_bl_yxq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="20171219-20171219"
                    android:gravity="center"
                    android:layout_marginLeft="40px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="证件编号"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/dialog_bl_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="123456789"
                    android:gravity="center"
                    android:layout_marginLeft="40px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="社会信用代码"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/dialog_bl_crecode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_content"
                    android:text="123456789"
                    android:gravity="center"
                    android:layout_marginLeft="40px"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--按钮-->
        <LinearLayout
            android:id="@+id/lin_up"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_again"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="重新扫描"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/release_dialog_exits_left_lock"
                android:textSize="@dimen/text_content"
                />
            <View
                android:id="@+id/dialog_view_bottom"
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:background="@color/danhui"
                />
            <TextView
                android:id="@+id/dialog_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/release_dialog_exits_right_lock"
                android:text="确认无误"
                android:gravity="center"
                android:textSize="@dimen/text_content"
                />
            <TextView
                android:id="@+id/dialog_only_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="@color/white"
                android:background="@drawable/dialog_id_fail_lock"
                android:gravity="center"
                android:textSize="@dimen/text_content"
                android:layout_weight="1"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>