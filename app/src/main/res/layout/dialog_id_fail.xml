<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:background="@drawable/dialog_exits_top_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="温馨提示："
                android:textColor="@color/black"
                android:textSize="@dimen/text_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@drawable/dialog_exits_center_bg"
            android:text="身份证识别失败"
            android:textColor="@color/text_fz"
            android:gravity="center"
            android:textSize="@dimen/text_content"
            android:layout_marginLeft="30px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dialog_fail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="@color/white"
                android:background="@drawable/dialog_id_fail_lock"
                android:gravity="center"
                android:textSize="@dimen/text_content"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>