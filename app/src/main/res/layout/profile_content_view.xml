<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/frag_my_infor"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:text="我的资料"
            android:layout_weight="1"
            android:textSize="45px" />
        <TextView
            android:id="@+id/text_frag_infor_add"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_samll"
            android:text="请完善个人资料"
            android:layout_marginRight="30px"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center"
            android:layout_marginRight="10px"
            android:src="@drawable/turn_right"
            />
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/danhui"
        />
    <LinearLayout
        android:id="@+id/frag_my_store"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:text="我的店铺"
            android:layout_weight="1"
            android:textSize="45px" />
        <TextView
            android:id="@+id/text_frag_store_add"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_samll"
            android:text="请完善店铺资料"
            android:visibility="invisible"
            android:layout_marginRight="30px"
            />
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center"
            android:src="@drawable/turn_right"
            android:layout_marginRight="10px"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/danhui"
        />
    <LinearLayout
        android:id="@+id/frag_my_collect"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:text="我的收藏"
            android:layout_weight="1"
            android:textSize="45px" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center"
            android:src="@drawable/turn_right"
            android:layout_marginRight="10px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/danhui"
        />
    <LinearLayout
        android:id="@+id/frag_my_setting"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:text="设置中心"
            android:layout_weight="1"
            android:textSize="45px" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center"
            android:src="@drawable/turn_right"
            android:layout_marginRight="10px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/danhui"
        />

</LinearLayout>