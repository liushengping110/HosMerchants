<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/main_text_sel"
        android:fitsSystemWindows="true"/>
    <include
        layout="@layout/title_back"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/xrefresh"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/recy_evlaution"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:background="@color/white"
                    />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            <ImageView
                android:id="@+id/img_net_err"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/text_err_agagin"
                android:layout_width="250px"
                android:textSize="@dimen/text_content"
                android:background="@drawable/login_sel"
                android:layout_height="100px"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="50px"
                android:layout_centerInParent="true"
                android:layout_below="@id/img_net_err"
                />
        </RelativeLayout>
</LinearLayout>