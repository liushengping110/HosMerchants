<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:background="@drawable/dialog_exits_top_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="身份证正面信息："
                android:textColor="@color/black"
                android:textSize="@dimen/text_content"
                android:layout_marginLeft="30px"
                android:gravity="center"
                />
        </LinearLayout>
        <!--信息内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60px"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="姓名"
                    android:textSize="@dimen/text_content"
                    />
                <TextView
                    android:id="@+id/dialog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="张三"
                    android:layout_marginLeft="40px"
                    android:textSize="@dimen/text_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="110px"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="性别"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:id="@+id/dialog_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="男"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="民族"
                            android:layout_marginLeft="100px"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:id="@+id/dialog_mz"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="汉"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="110px"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="出生"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:id="@+id/dialog_year"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="1993"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="年"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:id="@+id/dialog_month"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="7"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="月"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:id="@+id/dialog_day"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="5"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="日"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="110px"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="住址"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:id="@+id/dialog_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="110px"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="公民身份号码"
                            android:textSize="@dimen/text_content"
                            />
                        <TextView
                            android:id="@+id/dialog_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="40px"
                            android:textSize="@dimen/text_content"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!--信息内容-->
                <!--按钮-->
                <LinearLayout
                    android:id="@+id/lin_up"
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/dialog_again"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="重新扫描"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/release_dialog_exits_left_lock"
                        android:textSize="@dimen/text_content"
                        />
                    <View
                        android:id="@+id/dialog_view_bottom"
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="@color/danhui"
                        />
                    <TextView
                        android:id="@+id/dialog_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/release_dialog_exits_right_lock"
                        android:text="确认无误"
                        android:gravity="center"
                        android:textSize="@dimen/text_content"
                        />
                    <TextView
                        android:id="@+id/dialog_only_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:background="@drawable/dialog_id_fail_lock"
                        android:gravity="center"
                        android:textSize="@dimen/text_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>
</LinearLayout>