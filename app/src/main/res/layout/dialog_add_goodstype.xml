<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:background="@drawable/dialog_exits_top_bg"
            >
            <TextView
                android:id="@+id/text_add_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="添加商品分类："
                android:textColor="@color/black"
                android:textSize="@dimen/text_content"
                android:layout_marginLeft="30px"
                android:gravity="center"
                />
        </LinearLayout>
        <!--信息内容-->
        <TextView
            android:id="@+id/text_add_msg"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@color/white"
            android:gravity="center|left"
            android:paddingLeft="50px"
            android:textSize="@dimen/text_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="50px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:text="分类名："
                android:gravity="center"
                android:textSize="@dimen/text_title"
                />
            <EditText
                android:id="@+id/edit_add_type"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:background="@drawable/regist_edit_bg"
                android:hint="请输入商品分类名"
                android:textSize="@dimen/text_title"
                android:layout_marginBottom="30px"
                />
        </LinearLayout>
        <!--按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/release_dialog_exits_left_lock"
                android:textSize="@dimen/text_content"
                />
            <View
                android:id="@+id/dialog_view_bottom"
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:background="@color/danhui"
                />
            <TextView
                android:id="@+id/dialog_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/release_dialog_exits_right_lock"
                android:text="确定"
                android:gravity="center"
                android:textSize="@dimen/text_content"
                />
            <TextView
                android:id="@+id/dialog_only_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="@color/white"
                android:background="@drawable/dialog_id_fail_lock"
                android:gravity="center"
                android:textSize="@dimen/text_content"
                android:layout_weight="1"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>